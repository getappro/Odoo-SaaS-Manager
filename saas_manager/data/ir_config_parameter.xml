<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Base domain for SaaS instances -->
        <record id="saas_base_domain" model="ir.config_parameter">
            <field name="key">saas.base_domain</field>
            <field name="value">example.com</field>
        </record>

        <!-- Odoo host for provisioning -->
        <record id="saas_odoo_host" model="ir.config_parameter">
            <field name="key">saas.odoo_host</field>
            <field name="value">localhost</field>
        </record>

        <!-- Odoo port for provisioning -->
        <record id="saas_odoo_port" model="ir.config_parameter">
            <field name="key">saas.odoo_port</field>
            <field name="value">8069</field>
        </record>

    </data>
</odoo>
