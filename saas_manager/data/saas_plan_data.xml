<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Plan 1: Starter -->
        <record id="plan_starter" model="saas.plan">
            <field name="name">Starter</field>
            <field name="code">starter</field>
            <field name="sequence">10</field>
            <field name="user_limit">5</field>
            <field name="storage_limit">10.0</field>
            <field name="price_monthly">29.00</field>
            <field name="price_yearly">290.00</field>
            <field name="trial_days">14</field>
            <field name="is_popular" eval="False"/>
            <field name="color">1</field>
            <field name="description">Perfect for small businesses starting with Odoo</field>
            <field name="features"><![CDATA[
                <ul>
                    <li>Up to 5 users</li>
                    <li>10 GB storage</li>
                    <li>14 days free trial</li>
                    <li>Email support</li>
                    <li>All core features</li>
                    <li>Mobile app access</li>
                </ul>
            ]]></field>
        </record>

        <!-- Plan 2: Professional -->
        <record id="plan_professional" model="saas.plan">
            <field name="name">Professional</field>
            <field name="code">professional</field>
            <field name="sequence">20</field>
            <field name="user_limit">15</field>
            <field name="storage_limit">50.0</field>
            <field name="price_monthly">79.00</field>
            <field name="price_yearly">790.00</field>
            <field name="trial_days">14</field>
            <field name="is_popular" eval="True"/>
            <field name="color">3</field>
            <field name="description">Most popular choice for growing businesses</field>
            <field name="features"><![CDATA[
                <ul>
                    <li>Up to 15 users</li>
                    <li>50 GB storage</li>
                    <li>14 days free trial</li>
                    <li>Priority email support</li>
                    <li>All core features</li>
                    <li>Mobile app access</li>
                    <li>Advanced reporting</li>
                    <li>Custom domain</li>
                    <li>API access</li>
                </ul>
            ]]></field>
        </record>

        <!-- Plan 3: Enterprise -->
        <record id="plan_enterprise" model="saas.plan">
            <field name="name">Enterprise</field>
            <field name="code">enterprise</field>
            <field name="sequence">30</field>
            <field name="user_limit">50</field>
            <field name="storage_limit">200.0</field>
            <field name="price_monthly">199.00</field>
            <field name="price_yearly">1990.00</field>
            <field name="trial_days">14</field>
            <field name="is_popular" eval="False"/>
            <field name="color">4</field>
            <field name="description">For large organizations with advanced needs</field>
            <field name="features"><![CDATA[
                <ul>
                    <li>Up to 50 users</li>
                    <li>200 GB storage</li>
                    <li>14 days free trial</li>
                    <li>24/7 phone & email support</li>
                    <li>All core features</li>
                    <li>Mobile app access</li>
                    <li>Advanced reporting</li>
                    <li>Custom domain</li>
                    <li>API access</li>
                    <li>Dedicated account manager</li>
                    <li>Custom integrations</li>
                    <li>SLA guarantee</li>
                </ul>
            ]]></field>
        </record>

    </data>
</odoo>
