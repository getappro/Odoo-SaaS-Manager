<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- SaaS Server List View -->
        <record id="saas_server_view_list" model="ir.ui.view">
            <field name="name">saas.server.list</field>
            <field name="model">saas.server</field>
            <field name="arch" type="xml">
                <list string="SaaS Servers">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="server_url"/>
                    <field name="state" widget="badge"/>
                    <field name="is_online" widget="boolean"/>
                    <field name="instance_count"/>
                    <field name="available_capacity" widget="percentage"/>
                    <field name="health_status" widget="badge"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- SaaS Server Kanban View -->
        <record id="saas_server_view_kanban" model="ir.ui.view">
            <field name="name">saas.server.kanban</field>
            <field name="model">saas.server</field>
            <field name="arch" type="xml">
                <kanban string="SaaS Servers" default_group_by="state">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state"/>
                    <field name="is_online"/>
                    <field name="health_status"/>
                    <field name="instance_count"/>
                    <field name="available_capacity"/>
                    <field name="max_instances"/>
                    <field name="last_check_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong><t t-out="record.name.value"/></strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <span class="badge badge-secondary" t-if="record.state.value"><t t-out="record.state.value"/></span>
                                        <span class="badge" t-if="record.is_online.value" style="background-color: #28a745;">Online</span>
                                        <span class="badge" t-else="" style="background-color: #dc3545;">Offline</span>
                                    </div>
                                    <hr style="margin: 5px 0;"/>
                                    <div class="o_kanban_record_details">
                                        <p>
                                            <strong>Instances:</strong> <t t-out="record.instance_count.value"/> / <t t-out="record.max_instances.value"/>
                                        </p>
                                        <p>
                                            <strong>Capacity:</strong> <t t-out="record.available_capacity.value"/> %
                                        </p>
                                        <p>
                                            <strong>Health:</strong> <span class="badge" t-att-class="'badge-' + ('success' if record.health_status.value == 'healthy' else 'warning' if record.health_status.value == 'warning' else 'danger' if record.health_status.value == 'critical' else 'secondary')"><t t-out="record.health_status.value"/></span>
                                        </p>
                                        <p class="text-muted" t-if="record.last_check_date.value">
                                            Last check: <t t-out="record.last_check_date.value"/>
                                        </p>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <button type="object" name="action_check_health" class="btn btn-sm btn-primary">
                                        Check Health
                                    </button>
                                    <button type="object" name="action_view_instances" class="btn btn-sm btn-info">
                                        Instances
                                    </button>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- SaaS Server Form View -->
        <record id="saas_server_view_form" model="ir.ui.view">
            <field name="name">saas.server.form</field>
            <field name="model">saas.server</field>
            <field name="arch" type="xml">
                <form string="SaaS Server">
                    <header>
                        <button name="action_activate" type="object" class="oe_highlight" string="Activate" invisible="state not in ('draft', 'offline')"/>
                        <button name="action_deactivate" type="object" string="Deactivate" invisible="state not in ('active', 'maintenance')"/>
                        <button name="action_maintenance" type="object" string="Maintenance" invisible="state != 'active'"/>
                        <button name="action_check_health" type="object" string="Check Health" class="btn-info"/>
                        <button name="action_test_connection" type="object" string="Test Connection"/>
                        <field name="state" widget="statusbar" options="{'clickable': False}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Server Name"/>
                            </h1>
                        </div>

                        <notebook>
                            <!-- Basic Information Tab -->
                            <page string="Basic Information" name="basic_info">
                                <group>
                                    <group string="Identity">
                                        <field name="code"/>
                                        <field name="sequence"/>
                                        <field name="active"/>
                                    </group>
                                    <group string="Description">
                                        <field name="description"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Status Tab -->
                            <page string="Status" name="status">
                                <group>
                                    <group string="Current Status">
                                        <field name="is_online" readonly="1"/>
                                        <field name="health_status" readonly="1"/>
                                        <field name="last_check_date" readonly="1"/>
                                    </group>
                                    <group string="Capacity">
                                        <field name="instance_count" readonly="1"/>
                                        <field name="available_capacity" widget="percentage" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Server Configuration Tab -->
                            <page string="Server Configuration" name="server_config">
                                <group>
                                    <group string="Connection">
                                        <field name="server_url" widget="url"/>
                                        <field name="server_ip"/>
                                        <field name="server_port"/>
                                    </group>
                                    <group string="SSH Credentials">
                                        <field name="server_username"/>
                                        <field name="server_password" password="True"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Database Configuration Tab -->
                            <page string="Database Configuration" name="database_config">
                                <group>
                                    <group string="PostgreSQL Connection">
                                        <field name="db_host"/>
                                        <field name="db_port"/>
                                        <field name="db_user"/>
                                        <field name="db_password" password="True"/>
                                    </group>
                                    <group string="Odoo Authentication">
                                        <field name="master_password" password="True"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Server Resources Tab -->
                            <page string="Server Resources" name="resources">
                                <group>
                                    <group string="Hardware">
                                        <field name="cpu_cores"/>
                                        <field name="memory_gb"/>
                                        <field name="disk_gb"/>
                                    </group>
                                    <group string="Capacity Management">
                                        <field name="max_instances"/>
                                        <field name="instance_count" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Instances Tab -->
                            <page string="Hosted Instances" name="instances">
                                <field name="instance_ids" nolabel="1">
                                    <list string="Instances">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="database_name"/>
                                        <field name="state" widget="badge"/>
                                        <field name="activation_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- SaaS Server Search View -->
        <record id="saas_server_view_search" model="ir.ui.view">
            <field name="name">saas.server.search</field>
            <field name="model">saas.server</field>
            <field name="arch" type="xml">
                <search string="SaaS Servers">
                    <field name="name" string="Server Name"/>
                    <field name="code" string="Server Code"/>
                    <field name="server_url" string="Server URL"/>
                    <separator/>
                    <filter name="active_servers" string="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="offline_servers" string="Offline" domain="[('state', '=', 'offline')]"/>
                    <filter name="maintenance_servers" string="Maintenance" domain="[('state', '=', 'maintenance')]"/>
                    <filter name="healthy_servers" string="Healthy" domain="[('health_status', '=', 'healthy')]"/>
                    <filter name="critical_servers" string="Critical" domain="[('health_status', '=', 'critical')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                        <filter name="group_by_health" string="Health Status" context="{'group_by': 'health_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- SaaS Server Action -->
        <record id="saas_server_action" model="ir.actions.act_window">
            <field name="name">SaaS Servers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">saas.server</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="context">{'search_default_active_servers': True}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No SaaS servers yet. Create your first server!
                </p>
                <p>
                    A SaaS server is a dedicated Odoo instance that can host multiple client instances.
                    You can manage server resources, monitor health, and view hosted instances.
                </p>
            </field>
        </record>

    </data>
</odoo>

