<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- SaaS Template Form View -->
        <record id="view_saas_template_form" model="ir.ui.view">
            <field name="name">saas.template.form</field>
            <field name="model">saas.template</field>
            <field name="arch" type="xml">
                <form string="SaaS Template">
                    <header>
                        <button name="action_create_template_db" 
                                type="object" 
                                string="Create Template DB"
                                class="oe_highlight"
                                invisible="is_template_ready"/>
                        <button name="action_update_template" 
                                type="object" 
                                string="Update Version"
                                invisible="not is_template_ready"/>
                        <button name="action_access_template_db" 
                                type="object" 
                                string="Access Template"
                                invisible="not is_template_ready"/>
                        <button name="action_view_instances" 
                                type="object" 
                                string="View Instances"
                                invisible="instance_count == 0"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name" placeholder="Template Name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="template_db"/>
                                <field name="server_id" options="{'no_create': False}"/>
                                <field name="is_template_ready" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="template_version"/>
                                <field name="instance_count"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Modules">
                                <field name="module_ids">
                                    <list string="Installed Modules">
                                        <field name="name"/>
                                        <field name="shortdesc"/>
                                        <field name="state" widget="badge"
                                               decoration-success="state == 'installed'"
                                               decoration-info="state == 'to install'"
                                               decoration-muted="state == 'uninstalled'"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- SaaS Template List View (Odoo 18 - using <list>) -->
        <record id="view_saas_template_list" model="ir.ui.view">
            <field name="name">saas.template.list</field>
            <field name="model">saas.template</field>
            <field name="arch" type="xml">
                <list string="SaaS Templates" sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="template_db"/>
                    <field name="is_template_ready" widget="badge"
                           decoration-success="is_template_ready == True"
                           decoration-danger="is_template_ready == False"/>
                    <field name="template_version"/>
                    <field name="instance_count"/>
                    <field name="active" widget="boolean_toggle" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- SaaS Template Kanban View -->
        <record id="view_saas_template_kanban" model="ir.ui.view">
            <field name="name">saas.template.kanban</field>
            <field name="model">saas.template</field>
            <field name="arch" type="xml">
                <kanban string="SaaS Templates" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_template_ready"/>
                    <field name="instance_count"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div style="margin-top: 10px;">
                                        <span class="badge" t-if="record.is_template_ready.raw_value"
                                              t-attf-class="badge-success">Ready</span>
                                        <span class="badge" t-else="" t-attf-class="badge-warning">Not Ready</span>
                                    </div>
                                    <div style="margin-top: 10px;">
                                        <i class="fa fa-database"/> <field name="instance_count"/> instances
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- SaaS Template Search View -->
        <record id="view_saas_template_search" model="ir.ui.view">
            <field name="name">saas.template.search</field>
            <field name="model">saas.template</field>
            <field name="arch" type="xml">
                <search string="SaaS Templates">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="template_db"/>
                    <filter string="Ready" name="ready" domain="[('is_template_ready', '=', True)]"/>
                    <filter string="Not Ready" name="not_ready" domain="[('is_template_ready', '=', False)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'is_template_ready'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- SaaS Template Action -->
        <record id="action_saas_template" model="ir.actions.act_window">
            <field name="name">Templates</field>
            <field name="res_model">saas.template</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SaaS Template
                </p>
                <p>
                    Templates are PostgreSQL master databases that serve as blueprints for rapid instance provisioning.
                </p>
            </field>
        </record>

    </data>
</odoo>
