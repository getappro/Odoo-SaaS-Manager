<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Subscription tab to Settings -->
    <record id="res_config_settings_view_form_inherit_saas" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.saas</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app name="saas_subscription" string="Subscription">
                    <block title="Your Subscription Plan">
                        <setting>
                            <div class="content-group">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <label string="Current Usage"/>
                                        <div class="text-muted">
                                            <strong class="text-primary">
                                                <field name="saas_current_users" readonly="1"/> / 
                                                <field name="saas_user_limit" readonly="1"/>
                                            </strong> active users
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label string="Capacity"/>
                                        <div>
                                            <field name="saas_users_percentage" widget="percentage" readonly="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar" 
                                                 role="progressbar"
                                                 t-att-class="'bg-success' if saas_users_percentage &lt; 80 else ('bg-warning' if saas_users_percentage &lt; 95 else 'bg-danger')"
                                                 t-attf-style="width: #{saas_users_percentage}%"
                                                 t-attf-aria-valuenow="#{saas_users_percentage}"
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                <field name="saas_users_percentage"/> %
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </setting>
                        
                        <setting string="Need More Users?">
                            <div class="content-group">
                                <div class="text-muted mb-2">
                                    Upgrade your plan to add more users and unlock additional features.
                                </div>
                                <button name="action_request_upgrade" 
                                        string="Request Upgrade" 
                                        type="object" 
                                        class="btn-primary"
                                        icon="fa-arrow-up"/>
                            </div>
                        </setting>
                        
                        <setting string="Instance Information">
                            <div class="content-group">
                                <label for="saas_instance_uuid" string="Instance ID"/>
                                <div class="text-muted">
                                    <field name="saas_instance_uuid" readonly="1"/>
                                    <small class="form-text text-muted">
                                        Use this ID when contacting support
                                    </small>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
    
</odoo>
