<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree View -->
        <record id="view_saas_client_config_tree" model="ir.ui.view">
            <field name="name">saas.client.config.tree</field>
            <field name="model">saas.client.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="instance_uuid"/>
                    <field name="user_limit"/>
                    <field name="current_users"/>
                    <field name="users_percentage" widget="percentage"/>
                    <field name="sync_status"/>
                    <field name="last_sync_date"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record id="view_saas_client_config_form" model="ir.ui.view">
            <field name="name">saas.client.config.form</field>
            <field name="model">saas.client.config</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sync_with_master" type="object" string="Sync with Master" class="btn-primary"/>
                        <field name="sync_status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="instance_uuid" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Master Configuration">
                                <field name="master_url"/>
                                <field name="master_database"/>
                            </group>
                            
                            <group string="User Limits">
                                <field name="user_limit"/>
                                <field name="current_users"/>
                                <field name="users_percentage" widget="percentage"/>
                                <field name="is_limit_enforced"/>
                            </group>
                        </group>
                        
                        <group string="Sync Status">
                            <field name="last_sync_date"/>
                            <field name="sync_message" colspan="2"/>
                        </group>
                        
                        <notebook>
                            <page string="Notes">
                                <group>
                                    <field name="id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Action -->
        <record id="action_saas_client_config" model="ir.actions.act_window">
            <field name="name">SaaS Client Configuration</field>
            <field name="res_model">saas.client.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure your SaaS client instance
                </p>
                <p>
                    Set up connection to master server and configure limits.
                </p>
            </field>
        </record>
        
        <!-- Menu -->
        <menuitem id="menu_saas_client_root"
                  name="SaaS Client"
                  sequence="100"
                  web_icon="saas_client_agent,static/description/icon.png"/>
        
        <menuitem id="menu_saas_client_config"
                  name="Configuration"
                  parent="menu_saas_client_root"
                  action="action_saas_client_config"
                  sequence="10"/>
        
    </data>
</odoo>
