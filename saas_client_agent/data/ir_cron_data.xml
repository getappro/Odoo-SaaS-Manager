<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron: Sync with Master Every Hour -->
        <record id="cron_sync_client_config" model="ir.cron">
            <field name="name">SaaS Client: Sync with Master</field>
            <field name="model_id" ref="model_saas_client_config"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_with_master()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
    </data>
</odoo>
