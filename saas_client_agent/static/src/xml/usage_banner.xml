<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="saas_client_agent. UsageBanner">
        <t t-if="state.showWarning">
            <div t-attf-class="alert {{ alertClass }} mb-0 d-flex align-items-center p-2"
                 role="alert"
                 style="border-radius: 0;">
                <i class="fa fa-exclamation-triangle me-2"/>
                <div class="flex-grow-1 small">
                    <strong>User Limit: </strong>
                    <t t-esc="state.currentUsers"/> / <t t-esc="state.userLimit"/>
                    (<t t-esc="state. percentage"/>%)
                </div>
                <a href="/web#menu_id=base.menu_administration"
                   class="btn btn-sm btn-light ms-2">
                    Upgrade
                </a>
            </div>
        </t>
    </t>

</templates>